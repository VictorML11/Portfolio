---
import "../styles/global.css";
import SpaceBackground from "../components/SpaceBackground.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta
			name="description"
			content="Victor Maestro Lara - Backend Engineer Portfolio"
		/>
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@100;300;400;600&family=JetBrains+Mono:wght@400&display=swap"
			rel="stylesheet"
		/>
		<title>{title}</title>
	</head>
	<body class="antialiased selection:bg-white/20">
		<SpaceBackground />
		<div class="relative max-w-4xl mx-auto px-6 py-12 md:py-20 z-10">
			<slot />
		</div>
	</body>
</html>
