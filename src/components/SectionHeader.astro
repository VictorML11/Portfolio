---
interface Props {
    title: string;
    id?: string;
}

const { title, id } = Astro.props;
---

<div class="group flex items-center gap-3 md:gap-5 mb-12 w-full" id={id}>
    <div
        class="flex items-center font-mono text-2xl md:text-3xl font-bold select-none"
    >
        <span class="text-cyan-400 mr-1">|</span>
        <span class="text-purple-400">&gt;</span>
    </div>

    <h2
        class="text-2xl md:text-3xl font-bold text-white tracking-widest uppercase"
    >
        {title}
    </h2>

    <div
        class="flex-grow h-px bg-gradient-to-r from-cyan-500/20 to-transparent ml-4"
    >
    </div>
</div>
