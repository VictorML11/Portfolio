<div class="opacity-60 mix-blend-screen w-full h-full">
    <svg
        viewBox="0 0 100 100"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="w-full h-full overflow-visible"
    >
        <defs>
            <linearGradient
                id="ship-grad"
                x1="0"
                y1="0"
                x2="100"
                y2="100"
                gradientUnits="userSpaceOnUse"
            >
                <stop offset="0%" stop-color="#22d3ee"></stop>
                <stop offset="100%" stop-color="#a78bfa"></stop>
            </linearGradient>

            <filter
                id="engine-glow"
                x="-50%"
                y="-50%"
                width="200%"
                height="200%"
            >
                <feGaussianBlur stdDeviation="2" result="coloredBlur"
                ></feGaussianBlur>
                <feMerge>
                    <feMergeNode in="coloredBlur"></feMergeNode>
                    <feMergeNode in="SourceGraphic"></feMergeNode>
                </feMerge>
            </filter>
        </defs>

        <g class="ship-body">
            <path
                d="M 25 25 L 50 80"
                stroke="url(#ship-grad)"
                stroke-width="2"
                stroke-linecap="round"
                filter="url(#engine-glow)"></path>

            <path
                d="M 75 25 L 50 80"
                stroke="url(#ship-grad)"
                stroke-width="2"
                stroke-linecap="round"
                filter="url(#engine-glow)"></path>

            <path
                d="M 35 48 L 50 35 L 65 48"
                stroke="#22d3ee"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>

            <circle cx="50" cy="80" r="2" fill="white" class="animate-pulse"
            ></circle>
        </g>

        <g class="exhaust">
            <line
                x1="50"
                y1="85"
                x2="50"
                y2="95"
                class="particle-trail"
                style="--delay: 0s; --x-offset: 0px;"></line>

            <line
                x1="50"
                y1="85"
                x2="45"
                y2="92"
                class="particle-trail"
                style="--delay: 0.2s; --x-offset: -3px;"></line>

            <line
                x1="50"
                y1="85"
                x2="55"
                y2="92"
                class="particle-trail"
                style="--delay: 0.4s; --x-offset: 3px;"></line>

            <circle
                cx="50"
                cy="85"
                r="1"
                class="particle-dot"
                style="--delay: 0.1s;"></circle>
            <circle
                cx="50"
                cy="85"
                r="0.5"
                class="particle-dot"
                style="--delay: 0.5s;"></circle>
        </g>
    </svg>
</div>

<style>
    /* Physics for the Engine Trail */
    @keyframes trail-fire {
        0% {
            transform: translate(0, 0);
            opacity: 1;
            stroke-width: 2;
        }
        100% {
            /* Move down (away from engine) and spread out slightly */
            transform: translate(var(--x-offset), 20px);
            opacity: 0;
            stroke-width: 0;
        }
    }

    @keyframes particle-fly {
        0% {
            transform: translate(0, 0);
            opacity: 1;
        }
        100% {
            transform: translate(0, 30px);
            opacity: 0;
        }
    }

    .particle-trail {
        stroke: #22d3ee;
        stroke-linecap: round;
        animation: trail-fire 0.6s linear infinite;
        animation-delay: var(--delay);
        transform-origin: 50px 80px;
    }

    .particle-dot {
        fill: #c084fc;
        animation: particle-fly 0.8s linear infinite;
        animation-delay: var(--delay);
    }
</style>
