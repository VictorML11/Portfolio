<div class="w-full h-full">
    <svg
        viewBox="0 0 100 100"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
        class="w-full h-full overflow-visible"
    >
        <defs>
            <linearGradient
                id="ship-grad-logo"
                x1="0"
                y1="0"
                x2="100"
                y2="100"
                gradientUnits="userSpaceOnUse"
            >
                <stop offset="0%" stop-color="#22d3ee"></stop>
                <stop offset="100%" stop-color="#a78bfa"></stop>
            </linearGradient>

            <filter
                id="engine-glow-logo"
                x="-50%"
                y="-50%"
                width="200%"
                height="200%"
            >
                <feGaussianBlur stdDeviation="2" result="coloredBlur"
                ></feGaussianBlur>
                <feMerge>
                    <feMergeNode in="coloredBlur"></feMergeNode>
                    <feMergeNode in="SourceGraphic"></feMergeNode>
                </feMerge>
            </filter>
        </defs>

        <g class="exhaust opacity-80">
            <line x1="25" y1="25" x2="15" y2="5" class="trail-left-logo"></line>
            <circle
                cx="25"
                cy="25"
                r="1.5"
                class="particle-left-logo"
                style="--delay:0s"></circle>
            <circle
                cx="25"
                cy="25"
                r="1"
                class="particle-left-logo"
                style="--delay:0.2s"></circle>

            <line x1="75" y1="25" x2="85" y2="5" class="trail-right-logo"
            ></line>
            <circle
                cx="75"
                cy="25"
                r="1.5"
                class="particle-right-logo"
                style="--delay:0s"></circle>
            <circle
                cx="75"
                cy="25"
                r="1"
                class="particle-right-logo"
                style="--delay:0.2s"></circle>
        </g>

        <g class="ship-body">
            <path
                d="M 25 25 L 50 80"
                stroke="url(#ship-grad-logo)"
                stroke-width="2"
                stroke-linecap="round"
                filter="url(#engine-glow-logo)"></path>
            <path
                d="M 75 25 L 50 80"
                stroke="url(#ship-grad-logo)"
                stroke-width="2"
                stroke-linecap="round"
                filter="url(#engine-glow-logo)"></path>
            <path
                d="M 35 48 L 50 35 L 65 48"
                stroke="#22d3ee"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"></path>
            <circle cx="50" cy="80" r="2" fill="white" class="animate-pulse"
            ></circle>
        </g>
    </svg>
</div>

<style>
    /* LEFT TRAIL: Moves from (25,25) UP towards (15,5) */
    @keyframes move-left-out-logo {
        0% {
            transform: translate(0, 0);
            opacity: 0.9;
        }
        100% {
            transform: translate(-10px, -25px);
            opacity: 0;
        }
    }

    /* RIGHT TRAIL: Moves from (75,25) UP towards (85,5) */
    @keyframes move-right-out-logo {
        0% {
            transform: translate(0, 0);
            opacity: 0.9;
        }
        100% {
            transform: translate(10px, -25px);
            opacity: 0;
        }
    }

    .trail-left-logo {
        stroke: #22d3ee;
        stroke-dasharray: 2 4;
        stroke-linecap: round;
        animation: move-left-out-logo 0.5s linear infinite;
        transform-origin: 25px 25px;
    }

    .trail-right-logo {
        stroke: #c084fc;
        stroke-dasharray: 2 4;
        stroke-linecap: round;
        animation: move-right-out-logo 0.5s linear infinite;
        transform-origin: 75px 25px;
    }

    .particle-left-logo {
        fill: #22d3ee;
        animation: move-left-out-logo 0.8s ease-out infinite;
        animation-delay: var(--delay);
    }

    .particle-right-logo {
        fill: #c084fc;
        animation: move-right-out-logo 0.8s ease-out infinite;
        animation-delay: var(--delay);
    }
</style>
